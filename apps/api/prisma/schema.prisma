generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum IncidentSourceType {
  SCENARIO
  GOOGLE_CLOUD
}

model Incident {
  id          String   @id @default(cuid())
  scenarioId  String
  title       String?
  status      String   @default("analyzed")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  sourceType   IncidentSourceType @default(SCENARIO)
  sourceRef    String?
  sourcePayload Json?

  analyses    IncidentAnalysis[]
  postmortems Postmortem[]
  evidenceBundles EvidenceBundle[]
  promptTraces PromptTrace[]
  investigationSessions InvestigationSession[]

  @@index([sourceType])
  @@index([sourceRef])
}

model IncidentAnalysis {
  id          String   @id @default(cuid())
  incidentId  String
  createdAt   DateTime @default(now())

  // store request + result for replayability
  requestJson Json
  resultJson  Json

  evidenceBundleId String?
  evidenceBundle   EvidenceBundle? @relation(fields: [evidenceBundleId], references: [id])

  // Evidence completeness scoring
  evidenceCompleteness Json?

  // Reasoning response (from Gemini adapter)
  reasoningJson Json?

  incident    Incident @relation(fields: [incidentId], references: [id], onDelete: Cascade)
  promptTraces PromptTrace[]

  @@index([evidenceBundleId])
}

model EvidenceBundle {
  id          String   @id @default(cuid())
  bundleId    String   @unique
  incidentId  String
  createdAt   DateTime @default(now())
  createdBy  String?

  sources     String[] // simple for v1; can normalize later
  payload     Json     // stores EvidenceBundle (minus bundleId fields ok)

  hashAlgo    String
  hashInputVersion String

  incident    Incident @relation(fields: [incidentId], references: [id], onDelete: Cascade)
  analyses    IncidentAnalysis[]

  @@index([incidentId])
  @@index([createdAt])
}

model Postmortem {
  id          String   @id @default(cuid())
  incidentId  String
  createdAt   DateTime @default(now())

  markdown    String
  json        Json

  generatorVersion String?

  incident    Incident @relation(fields: [incidentId], references: [id], onDelete: Cascade)
}

model PromptTrace {
  id              String   @id @default(cuid())
  incidentId       String
  analysisId       String
  evidenceBundleId String

  createdAt        DateTime @default(now())

  model            String
  promptVersion    String

  // hashes for integrity
  promptHash       String
  requestHash      String
  responseHash     String

  // stored payloads (bounded)
  systemPrompt     String
  userPrompt       String
  requestJson      Json
  responseJson     Json

  incident         Incident @relation(fields: [incidentId], references: [id], onDelete: Cascade)
  analysis         IncidentAnalysis @relation(fields: [analysisId], references: [id], onDelete: Cascade)

  @@index([incidentId])
  @@index([analysisId])
  @@index([evidenceBundleId])
  @@index([createdAt])
}

model InvestigationSession {
  id            String   @id @default(cuid())
  incidentId     String
  createdAt      DateTime @default(now())
  createdBy      String?
  status         String   // RUNNING | STOPPED | COMPLETED | FAILED
  reason         String?  // stop reason
  maxIterations  Int
  confidenceTarget Float
  currentIteration Int @default(0)

  incident       Incident @relation(fields: [incidentId], references: [id], onDelete: Cascade)
  iterations     InvestigationIteration[]

  @@index([incidentId])
  @@index([createdAt])
}

model InvestigationIteration {
  id            String   @id @default(cuid())
  sessionId     String
  iteration     Int
  createdAt     DateTime @default(now())

  evidenceBundleId String?
  analysisId       String?
  completenessScore Int?
  overallConfidence Float?

  decisionJson   Json?   // what was decided to fetch / why
  notes          String?

  session       InvestigationSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@unique([sessionId, iteration])
  @@index([sessionId])
}
