# ==========================
# ChronosOps Root Env
# ==========================

# Web console
NEXT_PUBLIC_APP_NAME=ChronosOps
NEXT_PUBLIC_ENV=local

# API base URL (used by Next.js proxy or direct calls depending on your setup)
NEXT_PUBLIC_API_BASE_URL=http://localhost:4000

# API server
PORT=4000
API_PORT=4000
API_GLOBAL_PREFIX=v1
NODE_ENV=development

# Logging
LOG_LEVEL=debug

# Feature flags (future-proof)
FEATURE_PERSISTENCE=false
FEATURE_AUTH=false
FEATURE_AUDIT=false
